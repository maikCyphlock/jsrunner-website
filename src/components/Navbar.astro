---
import Github from "./icons/Gtihub.astro";

const currentPath = Astro.url.pathname;
const activeBtnClass =
  "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded";
const inactiveBtnClass =
  "border-indigo-700 border hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded";
---

<nav
  class="px-12 py-1 flex items-center gap-4 dark:bg-zinc-900 border-b border-zinc-700"
>
  <div>
    <img src="/Jsrunner-icon.svg" alt="" srcset="" class="h-12" />
  </div>
  <div class="flex gap-5 items-center justify-between font-semibold text-xs">
    Language:
    <a
      class={currentPath === "/en" ? activeBtnClass : inactiveBtnClass}
      href="/en">Eng</a
    >
    <a href="/" class={currentPath === "/" ? activeBtnClass : inactiveBtnClass}>
      Es</a
    >
  </div>
  <div>
    <a target="_blank" href="https://github.com/maikCyphlock/jsrunner">
      <Github />
    </a>
  </div>
</nav>
